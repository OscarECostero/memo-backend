{
    "version": 2,
    "builds": [
      {
        "src": "**/*.php",
        "use": "@vercel/php"
      },
      {
        "src": "public/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/(.*\\.php)",
        "dest": "public/index.php"
      },
      {
        "src": "/(.*)",
        "dest": "public/$1"
      }
    ]
  }